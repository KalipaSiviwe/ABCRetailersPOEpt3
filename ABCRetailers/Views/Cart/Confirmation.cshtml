<!-- Views/Cart/Confirmation.cshtml -->
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="text-center">
    <div class="alert alert-success">
        <h1><i class="fas fa-check-circle fa-3x mb-3"></i></h1>
        <h2>Order Confirmed!</h2>
        <p class="lead">Thank you for your purchase. Your order has been successfully placed.</p>
        <hr>
        <p>You will receive an email confirmation shortly.</p>
        <div class="mt-4">
            <a asp-controller="Order" asp-action="MyOrders" class="btn btn-primary btn-lg me-2">
                <i class="fas fa-list"></i> View My Orders
            </a>
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-store"></i> Continue Shopping
            </a>
        </div>
    </div>
</div>


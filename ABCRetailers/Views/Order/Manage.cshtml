<!-- Views/Order/Manage.cshtml -->
@model IEnumerable<ABCRetailers.Models.Order>
@{
    ViewData["Title"] = "Manage Orders";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-cog"></i> Manage Orders</h2>
    <a asp-controller="Home" asp-action="AdminDashboard" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Order ID</th>
                    <th>Customer</th>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                    <th>Order Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td><code>@order.OrderId.Substring(0, 8)...</code></td>
                        <td>@order.Username</td>
                        <td>@order.ProductName</td>
                        <td>@order.Quantity</td>
                        <td><strong class="text-success">@order.TotalPrice.ToString("C")</strong></td>
                        <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                        <td>
                            <span class="badge bg-@(order.Status == "PROCESSED" ? "success" : order.Status == "Submitted" ? "warning" : "info")">
                                @order.Status
                            </span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                                @if (order.Status != "PROCESSED")
                                {
                                    <form asp-action="UpdateOrderStatusToProcessed" method="post" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="orderId" value="@order.OrderId" />
                                        <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Mark this order as PROCESSED?')">
                                            <i class="fas fa-check"></i> Mark as Processed
                                        </button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle fa-3x mb-3"></i>
        <h4>No orders found</h4>
        <p>There are no orders to manage.</p>
    </div>
}


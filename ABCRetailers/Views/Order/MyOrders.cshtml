<!-- Views/Order/MyOrders.cshtml -->
@model IEnumerable<ABCRetailers.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-list"></i> My Orders</h2>
    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary">
        <i class="fas fa-store"></i> Continue Shopping
    </a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Order ID</th>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total Price</th>
                    <th>Order Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td><code>@order.OrderId.Substring(0, 8)...</code></td>
                        <td>@order.ProductName</td>
                        <td>@order.Quantity</td>
                        <td>@order.UnitPrice.ToString("C")</td>
                        <td><strong class="text-success">@order.TotalPrice.ToString("C")</strong></td>
                        <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                        <td>
                            <span class="badge bg-@(order.Status == "PROCESSED" ? "success" : order.Status == "Submitted" ? "warning" : "info")">
                                @order.Status
                            </span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-eye"></i> View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle fa-3x mb-3"></i>
        <h4>No orders found</h4>
        <p>You haven't placed any orders yet.</p>
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-store"></i> Start Shopping
        </a>
    </div>
}


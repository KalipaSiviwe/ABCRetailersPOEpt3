<!-- Views/Home/AdminDashboard.cshtml -->
@model ABCRetailers.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="text-center mb-5">
    <h1 class="display-4 text-primary">
        <i class="fas fa-tachometer-alt"></i> Admin Dashboard
    </h1>
    <p class="lead">Welcome, @Context.Session.GetString("Username")!</p>
</div>

<div class="row mb-5">
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-primary h-100">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-users"></i> Customers</h5>
                <h2 class="card-text">@Model.CustomerCount</h2>
                <a asp-controller="Customer" asp-action="Index" class="btn btn-light btn-sm">View All</a>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-success h-100">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-box"></i> Products</h5>
                <h2 class="card-text">@Model.ProductCount</h2>
                <a asp-controller="Product" asp-action="Index" class="btn btn-light btn-sm">View All</a>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-warning h-100">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-shopping-cart"></i> Orders</h5>
                <h2 class="card-text">@Model.OrderCount</h2>
                <a asp-controller="Order" asp-action="Manage" class="btn btn-light btn-sm">Manage Orders</a>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-info h-100">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-chart-line"></i> Overview</h5>
                <p class="card-text">System Statistics</p>
                <a asp-controller="Order" asp-action="Index" class="btn btn-light btn-sm">View All Orders</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <h3 class="mb-3">Quick Actions</h3>
        <div class="d-flex flex-wrap gap-2">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add Product
            </a>
            <a asp-controller="Order" asp-action="Manage" class="btn btn-warning">
                <i class="fas fa-cog"></i> Manage Orders
            </a>
            <a asp-controller="Product" asp-action="LowStock" class="btn btn-danger">
                <i class="fas fa-exclamation-triangle"></i> Low Stock Alert
            </a>
        </div>
    </div>
</div>

